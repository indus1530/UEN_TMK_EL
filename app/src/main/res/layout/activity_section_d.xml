                            android:layout_alignTop="@id/qtxt_mp107"
                            android:layout_alignBottom="@id/qtxt_mp107"
                            android:text="@string/Q_mp107" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/mp107"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/mp10701"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mp10701" />

                        <RadioButton
                            android:id="@+id/mp10702"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mp10702" />

                        <RadioButton
                            android:id="@+id/mp10703"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mp10703" />

                        <RadioButton
                            android:id="@+id/mp1074"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mp1074" />

                        <RadioButton
                            android:id="@+id/mp10705"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mp10705" />

                        <RadioButton
                            android:id="@+id/mp10706"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mp10706" />

                        <RadioButton
                            android:id="@+id/mp10707"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mp10707" />

                        <RadioButton
                            android:id="@+id/mp10708"
