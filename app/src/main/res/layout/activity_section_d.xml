                            android:text="@string/mp102" />

                        <TextView
                            android:id="@+id/q_mp102"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_mp102"
                            android:layout_alignBottom="@id/qtxt_mp102"
                            android:text="@string/Q_mp102" />

                    </RelativeLayout>

                    <Spinner
                        android:id="@+id/mp102"
                        style="@style/spinner1" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


