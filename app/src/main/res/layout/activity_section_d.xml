                    </RelativeLayout>

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/mp106"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/mp106"
                        android:inputType="number"
                        android:maxLength="3"
                        app:maxValue="500"
                        app:minValue="1"
                        app:type="range" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- mp107  Radio   -->
