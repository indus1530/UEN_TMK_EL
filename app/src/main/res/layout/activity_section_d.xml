                            android:layout_height="wrap_content"
                            android:text="@string/mp10709" />

                        <RadioButton
                            android:id="@+id/mp10710"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mp10710" />

                        <RadioButton
                            android:id="@+id/mp10711"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mp10711" />

                        <EditText
                            android:id="@+id/mp10711x"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                            android:hint="@string/mp10711"
                            android:inputType="text"
                            android:maxLength="25"
                            android:tag="mp10711"
                            android:text='@{mp10711.checked ? mp10711x.getText().toString() : ""}'
                            android:visibility='@{mp10711.checked? View.VISIBLE : View.GONE}' />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- mp108  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVmp108"
                style="@style/cardView"
                android:visibility='@{mp10701.checked || mp10702.checked ? View.VISIBLE : View.GONE}'>

