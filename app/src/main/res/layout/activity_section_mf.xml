                            <RadioButton
                                android:id="@+id/mf10696"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/mf10696" />

                            <EditText
                                android:id="@+id/mf10696x"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                                android:hint="@string/mf10696"
                                android:inputType="text"
                                android:maxLength="25"
                                android:tag="mf10696"
                                android:text='@{mf10696.checked ? mf10696x.getText().toString() : ""}'
                                android:visibility='@{mf10696.checked? View.VISIBLE : View.GONE}' />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- mf107  Input-Numeric   -->
