                                android:text="@string/mf10603" />

                            <RadioButton
                                android:id="@+id/mf10604"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/mf10604" />

                            <RadioButton
                                android:id="@+id/mf10605"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
